<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:layout_margin="2dp"
    android:background="@color/colorPrimaryDark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/github_user_avatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        tools:src="@drawable/avatar_placeholder"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/username_icon"
        android:background="@color/colorIconBackground"
        android:textAlignment="gravity"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_user_username"
        android:layout_width="138dp"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="132dp"
        android:layout_marginBottom="30dp"
        android:background="@color/colorIconBackground"
        android:padding="3dp"
        android:textAlignment="gravity"
        android:textSize="14sp"
        android:textColor="@color/colorPrimaryDark"
        tools:text="GithubMasterJohn" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="100dp"
        android:src="@drawable/realname_icon"
        android:background="@color/colorIconBackground"
        android:textAlignment="gravity"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_user_realname"
        android:layout_width="138dp"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="132dp"
        android:padding="3dp"
        android:background="@color/colorIconBackground"
        android:textAlignment="gravity"
        android:textSize="14sp"
        android:textColor="@color/colorPrimaryDark"
        tools:text="John Doe"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="100dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/location_icon"
        android:background="@color/colorIconBackground"
        android:textAlignment="gravity"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_user_location_basic"
        android:layout_width="138dp"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="132dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorIconBackground"
        android:padding="3dp"
        android:textAlignment="gravity"
        android:textSize="14sp"
        android:textColor="@color/colorPrimaryDark"
        tools:text="Main City" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical|right"
        android:layout_marginEnd="25dp"
        android:src="@drawable/right_arrow_icon" />

</FrameLayout>